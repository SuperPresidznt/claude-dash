generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum LinkedEntityType {
  Idea
  RoutineExperiment
  Study
  Other
}

enum ExperimentStatus {
  planned
  running
  complete
}

enum MacroTargetMetricType {
  count
  money
  custom
}

enum TaskStatus {
  todo
  in_progress
  blocked
  completed
  cancelled
}

enum TaskPriority {
  low
  medium
  high
  urgent
}

enum ProjectStatus {
  planning
  active
  paused
  completed
  cancelled
}

enum HabitCadence {
  daily
  weekly
  monthly
}

enum PomodoroType {
  work
  short_break
  long_break
}

enum JournalType {
  reflection
  am
  pm
  custom
}

enum ObjectiveStatus {
  active
  completed
  cancelled
}

enum ReviewType {
  weekly
  monthly
  quarterly
  yearly
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  createdAt DateTime @default(now())
  timezone  String   @default("America/Chicago")
  currency  String   @default("USD")
  defaultStartDuration Int @default(10)

  accounts  Account[]
  sessions  Session[]
  macroGoals MacroGoal[]
  startEvents StartEvent[]
  studySessions StudySession[]
  cashSnapshots CashSnapshot[]
  assets Asset[]
  liabilities Liability[]
  cashflowTxns CashflowTxn[]
  cashflowTemplates CashflowTemplate[]
  budgetEnvelopes BudgetEnvelope[]
  ideas Idea[]
  actions Action[]
  routineExperiments RoutineExperiment[]
  reminders Reminder[]
  tasks Task[]
  projects Project[]
  habits Habit[]
  habitCompletions HabitCompletion[]
  calendarSyncs CalendarSync[]
  calendarEvents CalendarEvent[]
  focusBlocks FocusBlock[]
  pomodoroSessions PomodoroSession[]
  journalEntries JournalEntry[]
  objectives Objective[]
  keyResults KeyResult[]
  reviews Review[]

  // Knowledge & Learning
  resources Resource[]
  readingSessions ReadingSession[]
  flashCards FlashCard[]

  // Wellbeing & Health
  wellbeingCheckIns WellbeingCheckIn[]
  wearableSyncs WearableSync[]
  wearableMetrics WearableMetric[]
  microBreaks MicroBreak[]

  // Social & Accountability
  accountabilityPartners AccountabilityPartner[]
  coWorkingSessions CoWorkingSession[]
  weeklyRecaps WeeklyRecap[]

  // Automation & Intelligence
  automationRules AutomationRule[]
  ruleExecutionLogs RuleExecutionLog[]
  aiCopilotConversations AICopilotConversation[]
  nlCaptures NLCapture[]

  // Plaid Integration
  plaidConnections PlaidConnection[]
  plaidAccounts PlaidAccount[]
  plaidTransactions PlaidTransaction[]
  plaidSyncLogs PlaidSyncLog[]
}

model MacroGoal {
  id               String   @id @default(cuid())
  userId           String
  title            String
  description      String?
  targetMetricType MacroTargetMetricType @default(count)
  targetValue      Float?
  isActive         Boolean @default(true)
  notes            String?

  user       User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  ideas      Idea[]
  projects   Project[]
  objectives Objective[]
}

model StartEvent {
  id                String            @id @default(cuid())
  userId            String
  timestamp         DateTime          @default(now())
  durationSec       Int
  context           String?
  linkedEntityType  LinkedEntityType?
  linkedEntityId    String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model CashflowTemplate {
  id          String            @id @default(cuid())
  userId      String
  name        String
  category    String
  direction   CashflowDirection @default(outflow)
  amountCents Int
  defaultNote String?
  dayOfMonth  Int?
  createdAt   DateTime          @default(now())
  updatedAt   DateTime          @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model BudgetEnvelope {
  id           String       @id @default(cuid())
  userId       String
  name         String
  category     String
  period       BudgetPeriod @default(monthly)
  targetCents  Int
  note         String?
  createdAt    DateTime     @default(now())
  updatedAt    DateTime     @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model StudySession {
  id       String   @id @default(cuid())
  userId   String
  startAt  DateTime
  endAt    DateTime
  minutes  Int
  topic    String

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model CashSnapshot {
  id              String   @id @default(cuid())
  userId          String
  timestamp       DateTime @default(now())
  cashOnHandCents Int
  note            String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Asset {
  id          String   @id @default(cuid())
  userId      String
  name        String
  category    String
  valueCents  Int
  isLiquid    Boolean @default(false)
  note        String?
  updatedAt   DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Liability {
  id             String   @id @default(cuid())
  userId         String
  name           String
  category       String
  balanceCents   Int
  aprPercent     Float?
  minimumPayment Int?
  note           String?
  updatedAt      DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model CashflowTxn {
  id         String   @id @default(cuid())
  userId     String
  description String
  amountCents Int
  date        DateTime @default(now())
  category    String
  direction   CashflowDirection @default(inflow)
  note        String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

enum CashflowDirection {
  inflow
  outflow
}

enum BudgetPeriod {
  monthly
  quarterly
  yearly
}

model Idea {
  id                String   @id @default(cuid())
  userId            String
  title             String
  description       String?
  createdAt         DateTime @default(now())
  linkedMacroGoalId String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  macroGoal MacroGoal? @relation(fields: [linkedMacroGoalId], references: [id])
  actions   Action[]
}

model Action {
  id          String   @id @default(cuid())
  userId      String
  ideaId      String
  description String
  completedAt DateTime @default(now())

  idea Idea @relation(fields: [ideaId], references: [id], onDelete: Cascade)
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model RoutineExperiment {
  id          String           @id @default(cuid())
  userId      String
  title       String
  hypothesis  String
  startDate   DateTime
  endDate     DateTime?
  status      ExperimentStatus @default(planned)
  metric      String
  targetValue Float
  resultValue Float?
  takeaway    String?
  decisionTag String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Reminder {
  id         String   @id @default(cuid())
  userId     String
  title      String
  schedule   String
  nextFireAt DateTime
  isActive   Boolean @default(true)

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Project {
  id          String   @id @default(cuid())
  userId      String
  name        String
  description String?
  status      ProjectStatus @default(active)
  macroGoalId String?
  targetDate  DateTime?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  user           User            @relation(fields: [userId], references: [id], onDelete: Cascade)
  macroGoal      MacroGoal?      @relation(fields: [macroGoalId], references: [id])
  tasks          Task[]
  objectives     Objective[]
  calendarEvents CalendarEvent[]

  @@index([userId])
  @@index([macroGoalId])
}

model Task {
  id          String   @id @default(cuid())
  userId      String
  title       String
  description String?
  status      TaskStatus @default(todo)
  priority    TaskPriority?
  effort      Int? // 1-5 scale
  impact      Int? // 1-5 scale
  dueDate     DateTime?
  completedAt DateTime?
  projectId   String?
  tags        String[] // Array of tag strings
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  user            User              @relation(fields: [userId], references: [id], onDelete: Cascade)
  project         Project?          @relation(fields: [projectId], references: [id])
  focusBlocks     FocusBlock[]
  pomodoroSessions PomodoroSession[]

  @@index([userId])
  @@index([projectId])
  @@index([status])
  @@index([dueDate])
}

model Habit {
  id          String   @id @default(cuid())
  userId      String
  name        String
  description String?
  cadence     HabitCadence @default(daily)
  targetCount Int @default(1) // per cadence period
  color       String? // hex color for UI
  icon        String? // icon identifier
  isActive    Boolean @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  user        User              @relation(fields: [userId], references: [id], onDelete: Cascade)
  completions HabitCompletion[]

  @@index([userId])
  @@index([isActive])
}

model HabitCompletion {
  id        String   @id @default(cuid())
  habitId   String
  userId    String
  date      DateTime @default(now())
  note      String?
  createdAt DateTime @default(now())

  habit Habit @relation(fields: [habitId], references: [id], onDelete: Cascade)
  user  User  @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([habitId])
  @@index([userId])
  @@index([date])
  @@unique([habitId, date])
}

model CalendarSync {
  id          String   @id @default(cuid())
  userId      String
  provider    String   @default("google")
  calendarId  String
  syncEnabled Boolean  @default(true)
  lastSyncAt  DateTime?
  nextSyncAt  DateTime?
  syncToken   String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  user   User            @relation(fields: [userId], references: [id], onDelete: Cascade)
  events CalendarEvent[]

  @@index([userId])
  @@unique([userId, provider, calendarId])
}

model CalendarEvent {
  id                   String   @id @default(cuid())
  calendarSyncId       String
  userId               String
  externalId           String   // Google event ID
  title                String
  description          String?
  startTime            DateTime
  endTime              DateTime
  isAllDay             Boolean  @default(false)
  linkedTaskId         String?
  linkedHabitId        String?
  linkedProjectId      String?
  linkedFocusBlockId   String?
  linkedPomodoroId     String?
  linkedFinanceIds     String[] // Array of finance entity IDs
  enrichedData         Json?    // Additional context data
  createdAt            DateTime @default(now())
  updatedAt            DateTime @updatedAt

  calendarSync       CalendarSync     @relation(fields: [calendarSyncId], references: [id], onDelete: Cascade)
  user               User             @relation(fields: [userId], references: [id], onDelete: Cascade)
  linkedProject      Project?         @relation(fields: [linkedProjectId], references: [id])
  linkedFocusBlock   FocusBlock?      @relation(fields: [linkedFocusBlockId], references: [id])
  linkedPomodoro     PomodoroSession? @relation(fields: [linkedPomodoroId], references: [id])

  @@index([calendarSyncId])
  @@index([userId])
  @@index([startTime])
  @@index([linkedProjectId])
  @@index([linkedFocusBlockId])
  @@index([linkedPomodoroId])
  @@unique([calendarSyncId, externalId])
}

model FocusBlock {
  id               String    @id @default(cuid())
  userId           String
  taskId           String?
  title            String
  description      String?
  startTime        DateTime
  endTime          DateTime
  actualStartTime  DateTime?
  actualEndTime    DateTime?
  completed        Boolean   @default(false)
  calendarEventId  String?
  createdAt        DateTime  @default(now())
  updatedAt        DateTime  @updatedAt

  user              User              @relation(fields: [userId], references: [id], onDelete: Cascade)
  task              Task?             @relation(fields: [taskId], references: [id])
  pomodoroSessions  PomodoroSession[]
  calendarEvents    CalendarEvent[]

  @@index([userId])
  @@index([taskId])
  @@index([startTime])
}

model PomodoroSession {
  id               String       @id @default(cuid())
  userId           String
  taskId           String?
  focusBlockId     String?
  type             PomodoroType @default(work)
  durationMinutes  Int          @default(25)
  startTime        DateTime
  endTime          DateTime?
  completed        Boolean      @default(false)
  interrupted      Boolean      @default(false)
  note             String?
  calendarEventId  String?
  createdAt        DateTime     @default(now())

  user            User            @relation(fields: [userId], references: [id], onDelete: Cascade)
  task            Task?           @relation(fields: [taskId], references: [id])
  focusBlock      FocusBlock?     @relation(fields: [focusBlockId], references: [id])
  calendarEvents  CalendarEvent[]

  @@index([userId])
  @@index([taskId])
  @@index([focusBlockId])
  @@index([startTime])
}

model JournalEntry {
  id              String      @id @default(cuid())
  userId          String
  type            JournalType @default(reflection)
  date            DateTime
  content         String      @db.Text
  promptQuestion  String?
  sentimentScore  Float?      // -1.0 to 1.0
  sentimentLabel  String?     // negative, neutral, positive
  tags            String[]
  createdAt       DateTime    @default(now())
  updatedAt       DateTime    @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([date])
  @@index([type])
}

model Objective {
  id               String          @id @default(cuid())
  userId           String
  projectId        String?
  macroGoalId      String?
  title            String
  description      String?
  quarter          String          // e.g., "Q1 2025"
  startDate        DateTime
  endDate          DateTime
  status           ObjectiveStatus @default(active)
  confidenceRating Int?            // 0-100%
  createdAt        DateTime        @default(now())
  updatedAt        DateTime        @updatedAt

  user       User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  project    Project?    @relation(fields: [projectId], references: [id])
  macroGoal  MacroGoal?  @relation(fields: [macroGoalId], references: [id])
  keyResults KeyResult[]

  @@index([userId])
  @@index([projectId])
  @@index([macroGoalId])
  @@index([quarter])
}

model KeyResult {
  id               String   @id @default(cuid())
  objectiveId      String
  userId           String
  title            String
  description      String?
  targetValue      Float
  currentValue     Float    @default(0)
  unit             String?  // e.g., "dollars", "tasks", "hours"
  isCompleted      Boolean  @default(false)
  confidenceRating Int?     // 0-100%
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  objective Objective @relation(fields: [objectiveId], references: [id], onDelete: Cascade)
  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([objectiveId])
  @@index([userId])
}

model Review {
  id              String     @id @default(cuid())
  userId          String
  type            ReviewType
  period          String     // e.g., "Week 48 2025", "November 2025"
  startDate       DateTime
  endDate         DateTime
  financeSummary  Json?      // {income, expenses, runway, budgetVariance}
  taskSummary     Json?      // {completed, total, completionRate}
  habitSummary    Json?      // {completionRate, topHabits, streaks}
  journalSummary  Json?      // {entryCount, avgSentiment, sentimentTrend}
  pomodoroSummary Json?      // {sessionsCompleted, totalMinutes}
  highlights      String[]
  lowlights       String[]
  actionItems     String[]
  emailSentAt     DateTime?
  createdAt       DateTime   @default(now())
  updatedAt       DateTime   @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([type])
  @@index([startDate])
}

// ========== KNOWLEDGE & LEARNING MODELS ==========

enum ResourceType {
  article
  video
  book
  podcast
  course
  other
}

enum FlashCardStatus {
  new
  learning
  review
  mastered
}

model Resource {
  id          String       @id @default(cuid())
  userId      String
  title       String
  url         String?
  type        ResourceType @default(article)
  category    String?
  description String?      @db.Text
  macroGoalId String?
  projectId   String?
  tags        String[]
  isFavorite  Boolean      @default(false)
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt

  user          User            @relation(fields: [userId], references: [id], onDelete: Cascade)
  readingSessions ReadingSession[]
  flashCards    FlashCard[]

  @@index([userId])
  @@index([type])
  @@index([macroGoalId])
  @@index([projectId])
}

model ReadingSession {
  id          String   @id @default(cuid())
  userId      String
  resourceId  String
  startTime   DateTime
  endTime     DateTime
  minutes     Int
  progress    Float?   @default(0) // 0-100%
  notes       String?  @db.Text
  createdAt   DateTime @default(now())

  user     User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  resource Resource @relation(fields: [resourceId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([resourceId])
  @@index([startTime])
}

model FlashCard {
  id              String          @id @default(cuid())
  userId          String
  resourceId      String?
  front           String          @db.Text
  back            String          @db.Text
  status          FlashCardStatus @default(new)
  easeFactor      Float           @default(2.5)
  interval        Int             @default(0) // Days until next review
  repetitions     Int             @default(0)
  lastReviewedAt  DateTime?
  nextReviewAt    DateTime
  tags            String[]
  createdAt       DateTime        @default(now())
  updatedAt       DateTime        @updatedAt

  user     User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  resource Resource? @relation(fields: [resourceId], references: [id])

  @@index([userId])
  @@index([resourceId])
  @@index([nextReviewAt])
  @@index([status])
}

// ========== WELLBEING & HEALTH MODELS ==========

enum MoodLevel {
  very_low
  low
  neutral
  good
  excellent
}

enum EnergyLevel {
  exhausted
  low
  moderate
  high
  energized
}

enum WearableProvider {
  apple_health
  google_fit
  fitbit
  garmin
}

model WellbeingCheckIn {
  id              String       @id @default(cuid())
  userId          String
  date            DateTime
  sleepHours      Float?
  sleepQuality    Int?         // 1-10 scale
  mood            MoodLevel?
  energy          EnergyLevel?
  stressLevel     Int?         // 1-10 scale
  physicalHealth  Int?         // 1-10 scale
  notes           String?      @db.Text
  createdAt       DateTime     @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([date])
  @@unique([userId, date])
}

model WearableSync {
  id            String            @id @default(cuid())
  userId        String
  provider      WearableProvider
  isEnabled     Boolean           @default(true)
  lastSyncAt    DateTime?
  syncToken     String?           @db.Text
  encryptedAuth String?           @db.Text // Encrypted credentials
  createdAt     DateTime          @default(now())
  updatedAt     DateTime          @updatedAt

  user     User           @relation(fields: [userId], references: [id], onDelete: Cascade)
  metrics  WearableMetric[]

  @@index([userId])
  @@unique([userId, provider])
}

model WearableMetric {
  id             String   @id @default(cuid())
  wearableSyncId String
  userId         String
  date           DateTime
  steps          Int?
  activeMinutes  Int?
  caloriesBurned Int?
  heartRateAvg   Int?
  heartRateMax   Int?
  heartRateMin   Int?
  distance       Float?   // in kilometers
  workoutMinutes Int?
  rawData        Json?    // Full payload from provider
  createdAt      DateTime @default(now())

  wearableSync WearableSync @relation(fields: [wearableSyncId], references: [id], onDelete: Cascade)
  user         User         @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([wearableSyncId])
  @@index([date])
  @@unique([wearableSyncId, date])
}

model MicroBreak {
  id          String   @id @default(cuid())
  userId      String
  scheduledAt DateTime
  completedAt DateTime?
  type        String   @default("mindful") // mindful, stretch, walk, etc.
  duration    Int      @default(5) // minutes
  note        String?
  createdAt   DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([scheduledAt])
}

// ========== SOCIAL & ACCOUNTABILITY MODELS ==========

enum PartnershipStatus {
  pending
  active
  paused
  ended
}

enum SharePermission {
  dashboard_view
  finance_summary
  goals_view
  habits_view
  tasks_view
  full_access
}

model AccountabilityPartner {
  id              String            @id @default(cuid())
  userId          String            // The user who owns this partnership
  partnerEmail    String
  partnerUserId   String?           // If partner has joined
  status          PartnershipStatus @default(pending)
  permissions     SharePermission[]
  invitedAt       DateTime          @default(now())
  acceptedAt      DateTime?
  lastContactAt   DateTime?
  notes           String?           @db.Text
  createdAt       DateTime          @default(now())
  updatedAt       DateTime          @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([partnerEmail])
  @@index([status])
}

model CoWorkingSession {
  id              String   @id @default(cuid())
  hostUserId      String
  title           String
  description     String?  @db.Text
  scheduledStart  DateTime
  scheduledEnd    DateTime
  actualStartTime DateTime?
  actualEndTime   DateTime?
  calendarEventId String?
  inviteLink      String?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  host         User                       @relation(fields: [hostUserId], references: [id], onDelete: Cascade)
  participants CoWorkingSessionParticipant[]

  @@index([hostUserId])
  @@index([scheduledStart])
}

model CoWorkingSessionParticipant {
  id                 String   @id @default(cuid())
  coWorkingSessionId String
  userId             String?  // Null if external participant
  email              String?
  joinedAt           DateTime?
  leftAt             DateTime?
  focusMinutes       Int      @default(0)
  createdAt          DateTime @default(now())

  coWorkingSession CoWorkingSession @relation(fields: [coWorkingSessionId], references: [id], onDelete: Cascade)

  @@index([coWorkingSessionId])
  @@index([userId])
}

model WeeklyRecap {
  id              String   @id @default(cuid())
  userId          String
  weekStart       DateTime
  weekEnd         DateTime
  generatedAt     DateTime @default(now())
  emailSentAt     DateTime?
  content         Json     // Full recap data
  sharedWithIds   String[] // Partner user IDs
  viewCount       Int      @default(0)
  createdAt       DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([weekStart])
}

// ========== AUTOMATION & INTELLIGENCE MODELS ==========

enum RuleConditionType {
  runway_low
  habit_streak_broken
  budget_exceeded
  task_overdue
  goal_progress_stalled
  wellbeing_declining
  custom
}

enum RuleActionType {
  send_alert
  create_task
  schedule_review
  send_email
  trigger_webhook
  custom
}

model AutomationRule {
  id               String            @id @default(cuid())
  userId           String
  name             String
  description      String?           @db.Text
  conditionType    RuleConditionType
  conditionConfig  Json              // e.g., {threshold: 3, unit: "months"}
  actionType       RuleActionType
  actionConfig     Json              // e.g., {taskTitle: "Review finances", priority: "high"}
  isEnabled        Boolean           @default(true)
  lastTriggeredAt  DateTime?
  triggerCount     Int               @default(0)
  createdAt        DateTime          @default(now())
  updatedAt        DateTime          @updatedAt

  user          User                @relation(fields: [userId], references: [id], onDelete: Cascade)
  executionLogs RuleExecutionLog[]

  @@index([userId])
  @@index([isEnabled])
  @@index([conditionType])
}

model RuleExecutionLog {
  id        String   @id @default(cuid())
  ruleId    String
  userId    String
  triggeredAt DateTime @default(now())
  success   Boolean
  result    Json?    // Details of what happened
  error     String?  @db.Text

  rule AutomationRule @relation(fields: [ruleId], references: [id], onDelete: Cascade)
  user User           @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([ruleId])
  @@index([userId])
  @@index([triggeredAt])
}

model AICopilotConversation {
  id        String   @id @default(cuid())
  userId    String
  title     String?
  messages  Json     // Array of {role, content, timestamp}
  context   Json?    // Relevant data passed to AI
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([createdAt])
}

model NLCapture {
  id          String   @id @default(cuid())
  userId      String
  rawInput    String   @db.Text
  parsedData  Json     // Extracted entities (amount, date, category, etc.)
  entityType  String?  // cashflow, task, habit, etc.
  entityId    String?  // ID of created entity
  confidence  Float?   // 0-1 score from NLP
  isProcessed Boolean  @default(false)
  error       String?  @db.Text
  createdAt   DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([isProcessed])
  @@index([createdAt])
}

// ========== PLAID INTEGRATION MODELS ==========

enum PlaidAccountType {
  checking
  savings
  credit_card
  investment
  loan
  other
}

enum PlaidSyncStatus {
  healthy
  requires_update
  error
}

model PlaidConnection {
  id                String          @id @default(cuid())
  userId            String
  plaidItemId       String          @unique
  plaidAccessToken  String          @db.Text // Encrypted
  institutionId     String
  institutionName   String
  isEnabled         Boolean         @default(true)
  syncStatus        PlaidSyncStatus @default(healthy)
  lastSyncAt        DateTime?
  consentGivenAt    DateTime
  consentRevokedAt  DateTime?
  cursor            String?         // For incremental sync
  createdAt         DateTime        @default(now())
  updatedAt         DateTime        @updatedAt

  user             User              @relation(fields: [userId], references: [id], onDelete: Cascade)
  accounts         PlaidAccount[]
  syncLogs         PlaidSyncLog[]

  @@index([userId])
  @@index([plaidItemId])
}

model PlaidAccount {
  id                  String           @id @default(cuid())
  plaidConnectionId   String
  userId              String
  plaidAccountId      String           @unique
  name                String
  officialName        String?
  type                PlaidAccountType
  subtype             String?
  mask                String?          // Last 4 digits
  currentBalanceCents Int?
  availableBalanceCents Int?
  creditLimitCents    Int?
  isoCurrencyCode     String           @default("USD")
  lastBalanceUpdate   DateTime?
  createdAt           DateTime         @default(now())
  updatedAt           DateTime         @updatedAt

  plaidConnection PlaidConnection     @relation(fields: [plaidConnectionId], references: [id], onDelete: Cascade)
  user            User                @relation(fields: [userId], references: [id], onDelete: Cascade)
  transactions    PlaidTransaction[]

  @@index([plaidConnectionId])
  @@index([userId])
  @@index([plaidAccountId])
}

model PlaidTransaction {
  id                  String   @id @default(cuid())
  plaidAccountId      String
  userId              String
  plaidTransactionId  String   @unique
  date                DateTime
  authorizedDate      DateTime?
  name                String
  merchantName        String?
  amountCents         Int
  isoCurrencyCode     String   @default("USD")
  category            String[] // Plaid's category hierarchy
  pending             Boolean  @default(false)
  categoryId          String?  // Plaid category ID
  linkedCashflowTxnId String?  // Link to our CashflowTxn if imported
  isHidden            Boolean  @default(false)
  createdAt           DateTime @default(now())
  updatedAt           DateTime @updatedAt

  plaidAccount PlaidAccount @relation(fields: [plaidAccountId], references: [id], onDelete: Cascade)
  user         User         @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([plaidAccountId])
  @@index([userId])
  @@index([date])
  @@index([pending])
}

model PlaidSyncLog {
  id                String   @id @default(cuid())
  plaidConnectionId String
  userId            String
  syncStartedAt     DateTime @default(now())
  syncCompletedAt   DateTime?
  success           Boolean
  transactionsAdded Int      @default(0)
  transactionsModified Int   @default(0)
  transactionsRemoved Int    @default(0)
  error             String?  @db.Text
  createdAt         DateTime @default(now())

  plaidConnection PlaidConnection @relation(fields: [plaidConnectionId], references: [id], onDelete: Cascade)
  user            User            @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([plaidConnectionId])
  @@index([userId])
  @@index([syncStartedAt])
}
