generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum LinkedEntityType {
  Idea
  RoutineExperiment
  Study
  Other
}

enum ExperimentStatus {
  planned
  running
  complete
}

enum MacroTargetMetricType {
  count
  money
  custom
}

enum TaskStatus {
  todo
  in_progress
  blocked
  completed
  cancelled
}

enum TaskPriority {
  low
  medium
  high
  urgent
}

enum ProjectStatus {
  planning
  active
  paused
  completed
  cancelled
}

enum HabitCadence {
  daily
  weekly
  monthly
}

enum PomodoroType {
  work
  short_break
  long_break
}

enum JournalType {
  reflection
  am
  pm
  custom
}

enum ObjectiveStatus {
  active
  completed
  cancelled
}

enum ReviewType {
  weekly
  monthly
  quarterly
  yearly
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  createdAt DateTime @default(now())
  timezone  String   @default("America/Chicago")
  currency  String   @default("USD")
  defaultStartDuration Int @default(10)

  accounts  Account[]
  sessions  Session[]
  macroGoals MacroGoal[]
  startEvents StartEvent[]
  studySessions StudySession[]
  cashSnapshots CashSnapshot[]
  assets Asset[]
  liabilities Liability[]
  cashflowTxns CashflowTxn[]
  cashflowTemplates CashflowTemplate[]
  budgetEnvelopes BudgetEnvelope[]
  ideas Idea[]
  actions Action[]
  routineExperiments RoutineExperiment[]
  reminders Reminder[]
  tasks Task[]
  projects Project[]
  habits Habit[]
  habitCompletions HabitCompletion[]
  calendarSyncs CalendarSync[]
  calendarEvents CalendarEvent[]
  focusBlocks FocusBlock[]
  pomodoroSessions PomodoroSession[]
  journalEntries JournalEntry[]
  objectives Objective[]
  keyResults KeyResult[]
  reviews Review[]
}

model MacroGoal {
  id               String   @id @default(cuid())
  userId           String
  title            String
  description      String?
  targetMetricType MacroTargetMetricType @default(count)
  targetValue      Float?
  isActive         Boolean @default(true)
  notes            String?

  user       User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  ideas      Idea[]
  projects   Project[]
  objectives Objective[]
}

model StartEvent {
  id                String            @id @default(cuid())
  userId            String
  timestamp         DateTime          @default(now())
  durationSec       Int
  context           String?
  linkedEntityType  LinkedEntityType?
  linkedEntityId    String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model CashflowTemplate {
  id          String            @id @default(cuid())
  userId      String
  name        String
  category    String
  direction   CashflowDirection @default(outflow)
  amountCents Int
  defaultNote String?
  dayOfMonth  Int?
  createdAt   DateTime          @default(now())
  updatedAt   DateTime          @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model BudgetEnvelope {
  id           String       @id @default(cuid())
  userId       String
  name         String
  category     String
  period       BudgetPeriod @default(monthly)
  targetCents  Int
  note         String?
  createdAt    DateTime     @default(now())
  updatedAt    DateTime     @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model StudySession {
  id       String   @id @default(cuid())
  userId   String
  startAt  DateTime
  endAt    DateTime
  minutes  Int
  topic    String

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model CashSnapshot {
  id              String   @id @default(cuid())
  userId          String
  timestamp       DateTime @default(now())
  cashOnHandCents Int
  note            String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Asset {
  id          String   @id @default(cuid())
  userId      String
  name        String
  category    String
  valueCents  Int
  isLiquid    Boolean @default(false)
  note        String?
  updatedAt   DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Liability {
  id             String   @id @default(cuid())
  userId         String
  name           String
  category       String
  balanceCents   Int
  aprPercent     Float?
  minimumPayment Int?
  note           String?
  updatedAt      DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model CashflowTxn {
  id         String   @id @default(cuid())
  userId     String
  description String
  amountCents Int
  date        DateTime @default(now())
  category    String
  direction   CashflowDirection @default(inflow)
  note        String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

enum CashflowDirection {
  inflow
  outflow
}

enum BudgetPeriod {
  monthly
  quarterly
  yearly
}

model Idea {
  id                String   @id @default(cuid())
  userId            String
  title             String
  description       String?
  createdAt         DateTime @default(now())
  linkedMacroGoalId String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  macroGoal MacroGoal? @relation(fields: [linkedMacroGoalId], references: [id])
  actions   Action[]
}

model Action {
  id          String   @id @default(cuid())
  userId      String
  ideaId      String
  description String
  completedAt DateTime @default(now())

  idea Idea @relation(fields: [ideaId], references: [id], onDelete: Cascade)
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model RoutineExperiment {
  id          String           @id @default(cuid())
  userId      String
  title       String
  hypothesis  String
  startDate   DateTime
  endDate     DateTime?
  status      ExperimentStatus @default(planned)
  metric      String
  targetValue Float
  resultValue Float?
  takeaway    String?
  decisionTag String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Reminder {
  id         String   @id @default(cuid())
  userId     String
  title      String
  schedule   String
  nextFireAt DateTime
  isActive   Boolean @default(true)

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Project {
  id          String   @id @default(cuid())
  userId      String
  name        String
  description String?
  status      ProjectStatus @default(active)
  macroGoalId String?
  targetDate  DateTime?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  user           User            @relation(fields: [userId], references: [id], onDelete: Cascade)
  macroGoal      MacroGoal?      @relation(fields: [macroGoalId], references: [id])
  tasks          Task[]
  objectives     Objective[]
  calendarEvents CalendarEvent[]

  @@index([userId])
  @@index([macroGoalId])
}

model Task {
  id          String   @id @default(cuid())
  userId      String
  title       String
  description String?
  status      TaskStatus @default(todo)
  priority    TaskPriority?
  effort      Int? // 1-5 scale
  impact      Int? // 1-5 scale
  dueDate     DateTime?
  completedAt DateTime?
  projectId   String?
  tags        String[] // Array of tag strings
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  user            User              @relation(fields: [userId], references: [id], onDelete: Cascade)
  project         Project?          @relation(fields: [projectId], references: [id])
  focusBlocks     FocusBlock[]
  pomodoroSessions PomodoroSession[]

  @@index([userId])
  @@index([projectId])
  @@index([status])
  @@index([dueDate])
}

model Habit {
  id          String   @id @default(cuid())
  userId      String
  name        String
  description String?
  cadence     HabitCadence @default(daily)
  targetCount Int @default(1) // per cadence period
  color       String? // hex color for UI
  icon        String? // icon identifier
  isActive    Boolean @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  user        User              @relation(fields: [userId], references: [id], onDelete: Cascade)
  completions HabitCompletion[]

  @@index([userId])
  @@index([isActive])
}

model HabitCompletion {
  id        String   @id @default(cuid())
  habitId   String
  userId    String
  date      DateTime @default(now())
  note      String?
  createdAt DateTime @default(now())

  habit Habit @relation(fields: [habitId], references: [id], onDelete: Cascade)
  user  User  @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([habitId])
  @@index([userId])
  @@index([date])
  @@unique([habitId, date])
}

model CalendarSync {
  id          String   @id @default(cuid())
  userId      String
  provider    String   @default("google")
  calendarId  String
  syncEnabled Boolean  @default(true)
  lastSyncAt  DateTime?
  nextSyncAt  DateTime?
  syncToken   String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  user   User            @relation(fields: [userId], references: [id], onDelete: Cascade)
  events CalendarEvent[]

  @@index([userId])
  @@unique([userId, provider, calendarId])
}

model CalendarEvent {
  id                   String   @id @default(cuid())
  calendarSyncId       String
  userId               String
  externalId           String   // Google event ID
  title                String
  description          String?
  startTime            DateTime
  endTime              DateTime
  isAllDay             Boolean  @default(false)
  linkedTaskId         String?
  linkedHabitId        String?
  linkedProjectId      String?
  linkedFocusBlockId   String?
  linkedPomodoroId     String?
  linkedFinanceIds     String[] // Array of finance entity IDs
  enrichedData         Json?    // Additional context data
  createdAt            DateTime @default(now())
  updatedAt            DateTime @updatedAt

  calendarSync       CalendarSync     @relation(fields: [calendarSyncId], references: [id], onDelete: Cascade)
  user               User             @relation(fields: [userId], references: [id], onDelete: Cascade)
  linkedProject      Project?         @relation(fields: [linkedProjectId], references: [id])
  linkedFocusBlock   FocusBlock?      @relation(fields: [linkedFocusBlockId], references: [id])
  linkedPomodoro     PomodoroSession? @relation(fields: [linkedPomodoroId], references: [id])

  @@index([calendarSyncId])
  @@index([userId])
  @@index([startTime])
  @@index([linkedProjectId])
  @@index([linkedFocusBlockId])
  @@index([linkedPomodoroId])
  @@unique([calendarSyncId, externalId])
}

model FocusBlock {
  id               String    @id @default(cuid())
  userId           String
  taskId           String?
  title            String
  description      String?
  startTime        DateTime
  endTime          DateTime
  actualStartTime  DateTime?
  actualEndTime    DateTime?
  completed        Boolean   @default(false)
  calendarEventId  String?
  createdAt        DateTime  @default(now())
  updatedAt        DateTime  @updatedAt

  user              User              @relation(fields: [userId], references: [id], onDelete: Cascade)
  task              Task?             @relation(fields: [taskId], references: [id])
  pomodoroSessions  PomodoroSession[]
  calendarEvents    CalendarEvent[]

  @@index([userId])
  @@index([taskId])
  @@index([startTime])
}

model PomodoroSession {
  id               String       @id @default(cuid())
  userId           String
  taskId           String?
  focusBlockId     String?
  type             PomodoroType @default(work)
  durationMinutes  Int          @default(25)
  startTime        DateTime
  endTime          DateTime?
  completed        Boolean      @default(false)
  interrupted      Boolean      @default(false)
  note             String?
  calendarEventId  String?
  createdAt        DateTime     @default(now())

  user            User            @relation(fields: [userId], references: [id], onDelete: Cascade)
  task            Task?           @relation(fields: [taskId], references: [id])
  focusBlock      FocusBlock?     @relation(fields: [focusBlockId], references: [id])
  calendarEvents  CalendarEvent[]

  @@index([userId])
  @@index([taskId])
  @@index([focusBlockId])
  @@index([startTime])
}

model JournalEntry {
  id              String      @id @default(cuid())
  userId          String
  type            JournalType @default(reflection)
  date            DateTime
  content         String      @db.Text
  promptQuestion  String?
  sentimentScore  Float?      // -1.0 to 1.0
  sentimentLabel  String?     // negative, neutral, positive
  tags            String[]
  createdAt       DateTime    @default(now())
  updatedAt       DateTime    @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([date])
  @@index([type])
}

model Objective {
  id               String          @id @default(cuid())
  userId           String
  projectId        String?
  macroGoalId      String?
  title            String
  description      String?
  quarter          String          // e.g., "Q1 2025"
  startDate        DateTime
  endDate          DateTime
  status           ObjectiveStatus @default(active)
  confidenceRating Int?            // 0-100%
  createdAt        DateTime        @default(now())
  updatedAt        DateTime        @updatedAt

  user       User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  project    Project?    @relation(fields: [projectId], references: [id])
  macroGoal  MacroGoal?  @relation(fields: [macroGoalId], references: [id])
  keyResults KeyResult[]

  @@index([userId])
  @@index([projectId])
  @@index([macroGoalId])
  @@index([quarter])
}

model KeyResult {
  id               String   @id @default(cuid())
  objectiveId      String
  userId           String
  title            String
  description      String?
  targetValue      Float
  currentValue     Float    @default(0)
  unit             String?  // e.g., "dollars", "tasks", "hours"
  isCompleted      Boolean  @default(false)
  confidenceRating Int?     // 0-100%
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  objective Objective @relation(fields: [objectiveId], references: [id], onDelete: Cascade)
  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([objectiveId])
  @@index([userId])
}

model Review {
  id              String     @id @default(cuid())
  userId          String
  type            ReviewType
  period          String     // e.g., "Week 48 2025", "November 2025"
  startDate       DateTime
  endDate         DateTime
  financeSummary  Json?      // {income, expenses, runway, budgetVariance}
  taskSummary     Json?      // {completed, total, completionRate}
  habitSummary    Json?      // {completionRate, topHabits, streaks}
  journalSummary  Json?      // {entryCount, avgSentiment, sentimentTrend}
  pomodoroSummary Json?      // {sessionsCompleted, totalMinutes}
  highlights      String[]
  lowlights       String[]
  actionItems     String[]
  emailSentAt     DateTime?
  createdAt       DateTime   @default(now())
  updatedAt       DateTime   @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([type])
  @@index([startDate])
}
